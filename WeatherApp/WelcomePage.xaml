<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.WelcomePage"
             Title="WelcomePage"
             BackgroundColor="#FFF3EC">
    <StackLayout VerticalOptions="Center"
                 Margin="20"
                 Spacing="0">
        <Image Source="sunwithclouds"
               HeightRequest="200"
               WidthRequest="200" />
        <Label Text="WeatherApp"
               FontSize="40"
               TextColor="#000" />
        <Label Text="Patryk Witek &#169;"
               FontSize="Small"
               TextColor="#000" />
        <Button Text="Get Started"
                FontSize="Large"
                BackgroundColor="#000"
                WidthRequest="250"
                Margin="0, 50, 0, 0"
                x:Name="BtnGetStarted"
                Clicked="BtnGetStarted_Clicked"/>
    </StackLayout>
</ContentPage>